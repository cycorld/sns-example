<div class="container">
  <div class ="row">
    <div class="card col s12">
      <div class="card-body">
        <h4 class="card-title">새 글 작성하기</h4>
        <%= form_tag posts_path do %>
          <div class="form-group">
            <%= text_area_tag :content, nil, class: "form-control", placeholder: "무슨 생각을 하고 있나요?" %>
          </div>
          <%= button_tag "작성하기", class: "btn btn-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
