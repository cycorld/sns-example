<div class="container">
  <div class ="row">
    <div class="card col s12">
      <div class="card-body">
        <h4 class="card-title">수정하기</h4>
        <%= form_tag post_path(@post), method: "patch" do %>
          <input type="hidden" name="id" value="<%=@post.content%>">
          <div class="form-group">
            <%= text_area_tag :content, @post.content, class: "form-control", placeholder: "무슨 생각을 하고 있나요?" %>
          </div>
          <%= button_tag "수정하기", class: "btn btn-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>

